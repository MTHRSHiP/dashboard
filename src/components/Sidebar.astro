---
import Anchor from "./Anchor";
import { range } from "../utils/range";
---

<div custom-sidebar {...Astro.props}>
  {range(10).map((i) => <Anchor custom-anchor>Sidebar Link {i}</Anchor>)}
</div>


<style lang="scss">
  [custom-sidebar] {
    @apply bg-blue-200;
    @apply flex flex-col;
    @apply pt-16 px-3 pb-3;

    [custom-anchor] {
      @apply px-5 py-3;
    }
  }
</style>